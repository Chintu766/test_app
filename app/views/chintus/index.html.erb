<h1>Chintus listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
   <tbody>
     <% @chintus.each do |article| %>
         <tr>
           <td><%= article.title %></td>
           <td><%= article.description %></td>
            <td><%= link_to 'Show', chintu_path(article) %></td>
            <td><%= link_to 'Edit', edit_chintu_path(article) %></td>
           <td><%= link_to "Delete", chintu_path(article), method: :delete %></td>
         </tr>
       <% end %>
     </tbody>

</table>
<p>
  <%= link_to 'Create new article', new_chintu_path%>
</p>
